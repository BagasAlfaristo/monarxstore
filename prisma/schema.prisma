generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // url diambil dari prisma.config.ts (PRISMA_DATABASE_URL)
}

enum OrderStatus {
  PENDING
  PAID
  FAILED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String?
  isAdmin      Boolean  @default(false)

  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  orders       Order[]
}

model Product {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  price       Int
  currency    String
  stock       Int
  imageUrl    String
  featured    Boolean  @default(false)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  orders      Order[]
}

model Order {
  id          String      @id @default(cuid())
  productSlug String
  email       String
  notes       String?
  status      OrderStatus @default(PENDING)
  createdAt   DateTime    @default(now())

  product     Product     @relation(fields: [productSlug], references: [slug])

  // relasi ke User (optional biar gak ganggu order lama)
  userId      String?
  user        User?       @relation(fields: [userId], references: [id])
}
